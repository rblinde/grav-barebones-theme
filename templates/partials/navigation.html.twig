<nav id="navigation">
  <div class="nav-container">
    <a href="{{- base_url -}}" class="home-link">
      <img src="{{- url('theme://images/android-chrome-192x192.png') -}}" alt="{{- site.title -}}" width="64" height="64">
    </a>

    <ul class="nav-links">
      {%- for page in pages.children.visible() -%}
        <li class="nav-link{%- if page.active() or page.activeChild() %} active{%- endif -%}">
          <a href="{{- page.url() -}}">{{- page.menu() -}}</a>
        </li>
      {%- endfor -%}
    </ul>
  </div>
</nav>
